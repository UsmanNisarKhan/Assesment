<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Assesment" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/purple_700</item>
    </style>


    <style name="AdAttribution">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:paddingStart">@dimen/_1sdp</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:text">Ad</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/textview_ad_shape</item>
        <item name="android:width">@dimen/_20sdp</item>
        <item name="android:height">@dimen/_15sdp</item>
    </style>

</resources>